<Application x:Class="CashmereDeposit.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CashmereDeposit"
             xmlns:views="clr-namespace:CashmereDeposit.Views"
             >
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary>
          <local:MainBootstrapper x:Key="bootstrapper"/>
        </ResourceDictionary>
        <ResourceDictionary Source="/Resources/ButtonStyles.xaml"/>
        <ResourceDictionary Source="/Resources/ControlStyles.xaml"/>
        <ResourceDictionary Source="/Resources/Lang_Strings.sw-KE.xaml"/>
        <ResourceDictionary Source="/Resources/Lang_Strings.xaml"/>
        <ResourceDictionary Source="/Resources/Lang_ErrorStrings.sw-KE.xaml"/>
        <ResourceDictionary Source="/Resources/Lang_ErrorStrings.xaml"/>
        <ResourceDictionary Source="/Resources/Flags.xaml"/>
        <ResourceDictionary Source="/Resources/ApplicationStyle.xaml"/>
      </ResourceDictionary.MergedDictionaries>
      <BitmapImage x:Key="main_background" UriSource="/Resources/background.png"/>
      <BitmapImage x:Key="startupBackground" UriSource="/Resources/splash.png"/>
    </ResourceDictionary>
  </Application.Resources>
</Application>